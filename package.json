{
  "name": "react-comfy",
  "private": true,
  "devDependencies": {
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.2",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "test": "lerna run test --stream"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{json,yml,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
